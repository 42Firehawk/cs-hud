.sidebar {
	position absolute
	bottom 2rem

	&.--left {
		left 4rem
		right calc(69.75% + 2rem)
	}

	&.--right {
		right 4rem
		left calc(69.75% + 2rem)

		.wrapper {
			grid-template-columns 1fr .5rem 2.5fr

			> * {
				grid-area 1/3
			}
		}

		.series-name {
			text-align right
		}
	}

	$economyHeight = 7.5rem
	$utilityHeight = 7.598rem

	&:not(.--stats-active) .wrapper .economy,
	&:not(.--utility-active) .wrapper .utility {
		transform translateY(calc(100% + .5rem))
		opacity 0
	}

	&:not(.--stats-active) .wrapper.--utility {
		transform translateY(calc(100% + .4rem))
	}

	&:not(.--stats-active) .wrapper.--series-name > * {
		transform translateY($economyHeight + .5rem)
	}

	&:not(.--utility-active) .wrapper.--series-name > * {
		transform translateY($economyHeight + $utilityHeight + 1rem)
	}

